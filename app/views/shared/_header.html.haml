%section#top-header.row
  %h1.col-md-2
    = link_to "TimFLiX", root_path
  - if current_user
    %ul.col-md-3.clearfix
      %li= link_to "Videos", root_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
    .col-md-5
      = bootstrap_form_tag(url: '/videos/search', method: "get", layout: :inline, class: "col-md-4") do |f|
        = f.text_field :search_term, type: "text", placeholder: "Search for your videos here", hide_label: true
        = f.submit "Search", class: "btn btn-default"
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to "Invite a friend", new_invitation_path
              = link_to "Account", user_path(current_user)
              %a(href="#") Plan and Billing
              = link_to "Sign Out", sign_out_path
